{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"outDir": "./static",
		"rootDir": "./typescript",
		"strict": true,
		"moduleResolution": "node",
		"moduleDetection": "force",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["typescript"]
}
